<Page x:Class="HqDownloadManager.WPF.Views.SourceUpdatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HqDownloadManager.WPF.Views"
      xmlns:viewmodels="clr-namespace:HqDownloadManager.WPF.ViewModels"
      xmlns:converters="clr-namespace:HqDownloadManager.WPF.Converters" 
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:commands="clr-namespace:HqDownloadManager.WPF.Commands"
      xmlns:extra="clr-namespace:HqDownloadManager.WPF.Extra"
      mc:Ignorable="d"
      Title="SourceUpdatesPage">

    <Page.Resources>
        <extra:CustomResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <converters:WidthToColumnConverter x:Key="WidthTiColumn" />
            <converters:GetDetailsConverter x:Key="DetailsConverter" />
            <viewmodels:NotificationViewModel x:Key="Notification"/>
            <viewmodels:SourceUpdateViewModel x:Key="Updates" />
            <viewmodels:DetailsViewModel x:Key="DetailsView" />
        </extra:CustomResourceDictionary>
    </Page.Resources>

    <Grid  
        x:Name="Principal">
        <ComboBox        
            x:Name="SourceSelectorCB"
            ItemsSource="{Binding Sources, Source={StaticResource Updates}}"
            SelectedItem="{Binding SelectedSource, Source={StaticResource Updates}, Mode=TwoWay}"                        
            FontSize="16"
            Width="200"
            Height="30"
            VerticalContentAlignment="Center"
            VerticalAlignment="Top"
            HorizontalAlignment="Right" />

        <ListView 
            x:Name="HqUpdatesGrid"
            ItemsSource="{Binding Updates, Source={StaticResource Updates}}"
            SelectedItem="{Binding SelectedUpdate, Source={StaticResource Updates}, Mode=TwoWay}"
            Margin="0,35,0,0"
            Grid.IsSharedSizeScope="True"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="{Binding ElementName=Principal, Path=ActualWidth, Converter={StaticResource WidthTiColumn}}" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="1"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid >
                        <Image 
                            Source="{Binding Hq.CoverSource}" 
                            Stretch="Fill"
                            ToolTipService.ToolTip="{Binding Hq.Title}" />
                        <TextBox 
                            Visibility="Visible" 
                            IsReadOnly="True" 
                            Text="{Binding Path=Hq.Title}" 
                            TextWrapping="Wrap" 
                            Height="50"
                            VerticalAlignment="Bottom"
                            BorderBrush="{x:Null}" 
                            Foreground="White" 
                            FontSize="16" >
                            <TextBox.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#B2FFFFFF" Offset="0"/>
                                    <GradientStop Color="#CC000000" Offset="0.277"/>
                                </LinearGradientBrush>
                            </TextBox.Background>
                        </TextBox>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                    <i:InvokeCommandAction 
                        CommandParameter="{Binding Source={StaticResource DetailsView}}"
                        Command="{Binding OpenDetails, Source={StaticResource Updates}}"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                    <i:InvokeCommandAction Command="{Binding GetDetails, Source={StaticResource Updates}}">
                        <i:InvokeCommandAction.CommandParameter>
                            <MultiBinding Converter="{StaticResource DetailsConverter}">
                                <Binding Path="SelectedSource" Source="{StaticResource Updates}"/>
                                <Binding Path="SelectedUpdate" Source="{StaticResource Updates}"/>
                                <Binding Source="{StaticResource DetailsView}"/>
                            </MultiBinding>
                        </i:InvokeCommandAction.CommandParameter>
                    </i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ListView>
        
        <Grid
           x:Name="DetailsManga"
           Visibility="{Binding Opened, Source={StaticResource DetailsView}, Converter={StaticResource BoolToVis}}"            
           Width="500"
           HorizontalAlignment="Right"
           Background="#FFFFFF">
            <Image 
                Source="{Binding Hq.CoverSource, Source={StaticResource DetailsView}}" 
                Stretch="Fill"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Width="180" 
                Height="240"
                Margin="5"
                ToolTipService.ToolTip="{Binding Hq.Title, Source={StaticResource DetailsView}}"/>
            <Button                        
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Background="Gray"
                Foreground="Black"
                Content="&#xf061;"
                IsEnabled="True"
                Width="30"
                Height="30"
                FontFamily="{StaticResource FontAwesomeSolid}"
                CommandParameter="{Binding Source={StaticResource DetailsView}}"
                Command="{Binding CloseDetails, Source={StaticResource DetailsView}}"/>
            <TextBox 
                Visibility="Visible" 
                IsReadOnly="True" 
                Text="{Binding Hq.Title, Source={StaticResource DetailsView}}" 
                TextWrapping="Wrap" 
                Width="310"
                Height="65"
                VerticalAlignment="Top"
                Margin="180,5,0,0"
                BorderBrush="{x:Null}" 
                Foreground="Black" 
                FontSize="19" >
            </TextBox>
            <TextBox 
                Visibility="Visible" 
                IsReadOnly="True" 
                Text="{Binding Hq.Author, Source={StaticResource DetailsView}}" 
                TextWrapping="Wrap" 
                Width="310"
                Height="26"
                VerticalAlignment="Top"
                Margin="180,70,0,0"
                BorderBrush="{x:Null}" 
                Foreground="Black" 
                FontSize="16" >
            </TextBox>
            <TextBox 
                Visibility="Visible" 
                IsReadOnly="True" 
                Text="{Binding Hq.Synopsis, Source={StaticResource DetailsView}}" 
                TextWrapping="Wrap" 
                Width="310"
                Height="148"
                VerticalAlignment="Top"
                Margin="180,100,0,0"
                BorderBrush="{x:Null}" 
                Foreground="Black" 
                FontSize="16" >
            </TextBox>
            <Button 
                x:Name="AddAll" 
                Content="Baixar Tudo"
                FontSize="16"
                Width="240"
                Height="30"
                VerticalContentAlignment="Center"
                Margin="5,250,0,0" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                CommandParameter="{Binding Hq, Source={StaticResource DetailsView}}"
                Command="{Binding AddToDownload, Source={StaticResource Updates}}" />
            <Button 
                x:Name="AddSelected" 
                Content="Baixar Selecionado"
                FontSize="16"
                Width="240"
                Height="30"
                VerticalContentAlignment="Center"
                Margin="250,250,0,0" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left" />
            <Button 
                x:Name="BtnDownloadUpdates" 
                Content="Baixar Updates"
                FontSize="16"
                Width="240"
                Height="30"
                VerticalContentAlignment="Center"
                Margin="5,285,0,0" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left" />
            <Label 
                Content="Updates" 
                Width="310"
                Height="35"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="5,315,0,0"
                BorderBrush="{x:Null}" 
                Foreground="Black" 
                FontSize="19" />
            <ListView
                x:Name="HqUpdates" 
                VerticalAlignment="Top"
                ItemsSource="{Binding SelectedUpdate.Chapters, Source={StaticResource Updates}}" 
                SelectedItem="{Binding SelectedChapter, Source={StaticResource Updates}, Mode=TwoWay}" 
                SelectedIndex="{Binding SelectedIndex, Source={StaticResource Updates}, Mode=TwoWay}"
                DisplayMemberPath="Title"
                FontSize="18"
                Margin="5,345,0,0"
                Height="90"
                SelectionMode="Multiple">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem 
                            x:Name="ReadUpdate" 
                            Header="Ler Agora" 
                            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>

            <Label 
                Content="Lista Completa" 
                Width="310"
                Height="35"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="5,435,0,0"
                BorderBrush="{x:Null}" 
                Foreground="Black" 
                FontSize="19" />
            <ListView
                x:Name="HqChapters" 
                ItemsSource="{Binding Hq.Chapters, Source={StaticResource DetailsView}}" 
                SelectedItem="{Binding SelectedChapter, Source={StaticResource DetailsView}, Mode=TwoWay}" 
                SelectedIndex="{Binding SelectedIndex, Source={StaticResource DetailsView}, Mode=TwoWay}"
                DisplayMemberPath="Title"
                FontSize="18"
                Margin="5,465,0,0"
                SelectionMode="Multiple">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem 
                            x:Name="ReadNow" 
                            Header="Ler Agora" 
                            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </Grid>

        <Grid     
            Visibility="{Binding Visibility, Source={StaticResource Notification}, Converter={StaticResource BoolToVis}}"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Width="600" 
            Height="225" 
            Background="#B2000000" >
            <Grid.Effect>
                <DropShadowEffect />
            </Grid.Effect>
            <TextBox 
                IsReadOnly="True"  
                Text="Aguarde..." 
                FontSize="130" 
                Background="{x:Null}" 
                Foreground="White" 
                BorderBrush="{x:Null}"/>
            <TextBox 
                IsReadOnly="True"  
                Text="{Binding Message, Source={StaticResource Notification}}" 
                FontSize="20" 
                Background="{x:Null}" 
                Foreground="White" 
                VerticalAlignment="Bottom" 
                VerticalContentAlignment="Bottom" 
                BorderBrush="{x:Null}"/>
        </Grid>
    </Grid>
</Page>
